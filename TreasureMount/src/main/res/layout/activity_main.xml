<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" android:background="#ff000000">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_button_map"
            android:text="@string/text_map" android:width="200dp" android:textSize="30sp"
            android:layout_marginTop="59dp" android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4" android:src="@drawable/logo"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"/>
</RelativeLayout>
