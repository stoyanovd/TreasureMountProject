<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" android:background="#ff000000">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_button_map" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:text="@string/text_map"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clean Database"
            android:id="@+id/cleanDatabaseButton" android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/main_button_map" android:layout_toEndOf="@+id/main_button_map"/>
</RelativeLayout>
